<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/card_padding"
    android:paddingEnd="@dimen/user_card_padding_start_end"
    android:paddingStart="@dimen/user_card_padding_start_end"
    android:paddingBottom="@dimen/padding_l"
    android:background="@drawable/achievement_card_style_second_week"
    android:layout_marginTop="@dimen/margin_3xl"
    android:layout_marginStart="@dimen/size_l">

    <TextView
        android:id="@+id/week_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_xl"
        android:text="@string/two"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_walk" />

    <TextView
        android:id="@+id/text_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_s"
        android:layout_marginTop="@dimen/margin_xl"
        android:text="@string/week_streak"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/week_number"
        app:layout_constraintTop_toBottomOf="@id/image_walk" />


    <ImageView
        android:id="@+id/image_walk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_run"
        app:layout_constraintBottom_toTopOf="@id/text_week"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>